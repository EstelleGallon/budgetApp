<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Title -->
        <TextView
            android:id="@+id/tvSavingGoalTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Saving Goal Title"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000" />
        <!-- Edit Icon -->
        <ImageView
            android:id="@+id/ivEditSavingGoal"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_edit"
            android:contentDescription="Edit Saving Goal"
            app:tint="@color/gray"/>
    </LinearLayout>

    <!-- Progress Bar with Percentage -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <ProgressBar
            android:id="@+id/progressBarSavingGoal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:progress="50"
            android:max="100"
            style="?android:attr/progressBarStyleHorizontal" />

        <TextView
            android:id="@+id/tvSavingGoalPercentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="50%"
            android:textSize="14sp"
            android:textColor="#000000" />
    </LinearLayout>

    <!-- Deadline and Total Amount -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/tvSavingGoalDeadline"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Deadline: 2023-12-31"
            android:textSize="14sp"
            android:textColor="#666666" />

        <TextView
            android:id="@+id/tvSavingGoalTotalAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â‚¬1000"
            android:textSize="14sp"
            android:textColor="#666666" />
    </LinearLayout>
</LinearLayout>